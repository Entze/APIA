% Based on Blount et al. 2014. "Towards a Theory of Intentional Agents"
% and Blount. 2013. "An architecture for intentional agents"

%%%% Step 1 %%%%
#program aia_step_1.

occurs(Action, I) :-
    current_step(I1),
    I < I1,
    attempt(Action, I),
    not impossible(Action, I).

:-
    current_step(I1),
    I < I1,
    occurs(Action, I),
    not attempt(Action, I).

-occurs(Action, I) :-
    current_step(I1),
    I < I1,
    -happened(Action, I).

{ apply_cr_rule(d(Action, I2)) } :-
    current_step(I1),
    physical_exogeneous_action(Action),
    I2 < I1.

occurs(Action, I2) :-
    apply_cr_rule(d(Action, I2)).

:~
    apply_cr_rule(d(Action, I2)). [1@1, d(Action, I2)]

unobserved(Action, I) :-
    current_step(I1),
    I < I1,
    physical_exogeneous_action(Action),
    occurs(Action, I),
    not happened(Action, I).

number_unobserved(N, I) :-
    current_step(I),
    N = #count{ unobserved(EX, IX) }.

%%%% Step 2 %%%%
#program aia_step_2.

:-
    current_step(I),
    number_unobserved(N, I),
    interpretation(X, I),
    N != X.

%--- Category 1 ---%
% "there are no activities or goals that are active in cm_n"

category_1_history(I) :-
    current_step(I),
    interpretation(N, I),
    not active_goal_or_activity(I).

active_goal_or_activity(I) :-
    current_step(I),
    interpretation(N, I),
    holds(active_goal(G), I).

active_goal_or_activity(I) :-
    current_step(I),
    interpretation(N, I),
    holds(active(M), I).

intended_action(wait, I) :-
    current_step(I),
    interpretation(N, I),
    category_1_history(I).

%--- Category 2 ---%
% "there is an activity m such that m is top-level and active in cm_n but its goal g is no longer active in cm_n"

category_2_history(M, I) :-
    current_step(I),
    interpretation(N, I),
    -holds(minor(M), I),
    holds(active(M), I),
    goal(M, G),
    -active_goal(G).

intended_action(stop(M), I) :-
    current_step(I),
    interpretation(N, I),
    category_2_history(M, I).

%--- Category 3 ---%
% "there is an activity m such that m and its goal g are both top-level and active and a is the next action of m in cm_n"

category_3_history(M, I) :-
    current_step(I),
    interpretation(N, I),
    -holds(minor(M) I),

occurs(Action, I1) :-
    current_step(I),
    category_3_history(M, I),
    interpretation(N, I),
    I <= I1,
    -holds(minor(M), I1),
    holds(in_progress(M), I1),
    holds(next_action(M, Action), I1),
    not impossible(Action, I1).

projected_success(M, I) :-
    current_step(I),
    interpretation(N, I),
    -holds(minor(M), I),
    I < I1,
    holds(active(M), I1),
    goal(M, G),
    holds(G, I1).

-projected_success(M, I) :-
    current_step(I),
    interpretation(N, I),
    not projected_success(M, I).

intended_action(Action, I) :-
    current_step(I),
    interpretation(N, I),
    category_3_history(M, I),
    holds(next_action(M, Action), I),
    projected_success(M, I).

{ apply_cr_rule(f(M, I)) } :-
    current_step(I),
    interpretation(N, I),
    category_3_history(M, I),
    -projected_success(M, I).

futile(M, I) :-
    apply_cr_rule(f(M, I)).

:~
    apply_cr_rule(f(M, I)). [1@1, f(M, I)]

:-
    current_step(I),
    interpretation(N, I),
    category_3_history(M, I),
    -projected_success(M, I).

intended_action(stop(M), I) :-
    current_step(I),
    interpretation(N, I),
    category_3_history(M, I),
    futile(M, I).

%--- Category 4 ---%
% "there is a goal g that is active in cm_n but no activity with goal g is active in cm_n"

existing_candidate(M, I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    holds(next_name(M1), I),
    M < M1,
    goal(M, G).

new_candidate(M, I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    holds(next_name(M), I).

candidate(M, I) :-
    new_candidate(M, I).

candidate(M, I) :-
    existing_candidate(M, I).

occurs(start(M), I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    candidate(M, I),
    goal(M, G),
    not impossible(start(M), I).

impossible(start(M), I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    goal(M1, G),
    occurs(start(M1), I),
    M != M1.

:-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    occurs(start(M), I),
    -projected_success(M, I),
    not futile(G, I).

{ apply_cr_rule(futile_goal(G, I)) } :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    occurs(start(M), I),
    -projected_success(M, I).

futile(G, I) :-
    apply_cr_rule(futile_goal(G, I)).

:~
    apply_cr_rule(futile_goal(G, I)). [1@1, futile_goal(G, I)]

intended_action(wait, I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    futile(G, I).

some_action_occurred(I1) :-
    current_step(I),
    interpretation(N, I),
    I <= I1,
    occurs(E, I1).

%--- Creating new candidates ---%

goal(M, G) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I).

{ apply_cr_rule(plan_new(PAA, I1)) } :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I),
    occurs(start(M), I),
    I < I1,
    some_action_occurred(I1 - 1).

occurs(PAA, I1) :-
    apply_cr_rule(plan_new(PAA, I1)).

:~
    apply_cr_rule(plan_new(PAA, I1)). [1@1, plan_new(PAA, I1)]

component(M, I1 - 1, PAA) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I),
    occurs(start(M)),
    occurs(PAA, I1).

:-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I),
    component(M, K, PAA1),
    component(M, K, PAA2),
    PAA1 != PAA2.

has_comp(M, K) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I),
    occurs(start(M), I),
    component(M, K, C).

length(M, K) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    new_candidate(M, I),
    occurs(start(M), I),
    has_comp(M, K),
    not has_comp(M, K + 1).

%--- Creating existing candidates ---%

{ apply_cr_rule(plan_existing(PAA, I1)) } :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    existing_candidate(M, I),
    occurs(start(M), I),
    I < I1,
    holds(next_action(M, PAA), I1),
    some_action_occurred(I1 - 1).

occurs(PAA, I1) :-
    apply_cr_rule(plan_existing(PAA, I1)).

:~
    apply_cr_rule(plan_existing(PAA, I1)). [1@1, plan_existing(PAA, I1)]

occurs(MAA, I1) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    existing_candidate(M, I),
    occurs(start(M), I),
    I < I1,
    holds(in_progress(M), I1),
    holds(next_action(M, MAA), I1).

intended_action(start(M), I) :-
    current_step(I),
    interpretation(N, I),
    category_4_history(G, I),
    candidate(M, I),
    occurs(start(M), I),
    projected_success(M, I).

% prefer(plan_new(PAA, I1), futile_goal(G, I)).
:~
    not apply_cr_rule(plan_new(PAA, I1)),
    apply_cr_rule(futile_goal(G, I)). [1@2, plan_new(PAA, I1), futile_goal(G, I)]

% prefer(plan_existing(PAA, I1), futile_goal(G, I)).
:~
    not apply_cr_rule(plan_existing(PAA, I1)),
    apply_cr_rule(futile_goal(G, I)). [1@2, plan_existing(PAA, I1), futile_goal(G, I)]
